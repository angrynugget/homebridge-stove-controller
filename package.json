{
	"name": "homebridge-stove-controller",
	"version": "1.1.0",
	"description": "Homebridge plugin to manage a pellet stove using the StufaSmart WiFi module and cloudWiNet platform.",
	"main": "index.js",
	"files": [
		"index.js",
		"config.schema.json"
	],
	"scripts": {
		"lint": "jshint index.js",
		"test": "npm run lint && echo 'No test :('",
