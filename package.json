	"repository": {
		"type": "git",
		"url": "git@github.com:angrynugget/homebridge-stove-controller.git"
	},
	"keywords": [
		"homebridge-plugin",
		"homebridge",
		"micronova",
		"stufasmart",
		"WiNET",
		"piazzetta",
		"pellets",
		"stove",
		"heater-control"
	],
	"author": "@angrynugget",
	"license": "AGPL-3.0-only",
	"bugs": {
		"url": "https://github.com/angrynugget/homebridge-stove=controller/issues"
	},
	"dependencies": {
		"jsonwebtoken": "^8.5.1",
		"node-fetch": "^2.6.1"
	},
	"devDependencies": {
		"jshint": "^2.12.0",
		"np": "^7.4.0"
	},
	"jshintConfig": {
		"bitwise": true,
		"esversion": 9,
		"strict": "implied",
		"undef": true,
		"unused": true,
		"module": true,
		"node": true
	},
	"homepage": "https://github.com/angrynugget/homebridge-stove-controller"
